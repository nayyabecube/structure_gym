<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>   

        <template id="module_report">

            <t t-call="report.html_container">

                <t t-call="report.external_layout">

                    <t t-foreach="docs" t-as="o">
                
                        <div class="page">

                            <style>
                                .header,
                                .footer {
                                    display: none;
                                }
                                .report-header {
                                    width: 100%;
                                    float: left;
                                    margin: 0px;
                                }
                                .dated {
                                    width: 100%;
                                    float: left;
                                }
                                .dated p {
                                    width: 48%;
                                    float: left;
                                    text-align: right;
                                    text-align: left;
                                    margin: 0px 1%;
                                }
                                .dated p:first-child {
                                    text-align: right;
                                }
                                .dated {
                                    padding: 0px;
                                    margin: 10px 0px;
                                }
                                .heading h2 {
                                    text-align: center;
                                    font-size: 20px;
                                    margin: 0px;
                                }
                                .heading h2 span {
                                    border-bottom: 1px solid #000;
                                }
                                .report-container {
                                    width: 1000px;
                                    margin: 0px auto;
                                }
                                .left {
                                    width: 32%;
                                    font-weight: bold;
                                }

                                table {
                                    border: 2px solid #595959;
                                    margin: 10px 0px 0px;
                                    width: 100%;
                                    float: left;
                                    border-spacing: 0px;
                                }
                                table tr td {
                                    border-right: 1px solid #000;
                                    text-align: center;
                                }
                                table tr td:nth-child(2) {
                                    text-align: left;
                                    padding: 10px 0px 10px 10px;
                                }
                                table tr.child td {
                                    font-weight: bold;
                                    padding: 10px 0px;
                                    color: #fff;
                                    background: #595959;
                                    border: none;
                                    border-right: 2px solid #fff;
                                }
                                table tr td {
                                    border-top: 1px solid #000;
                                    padding: 5px 0px;
                                }

                                table tr td.space {
                                    min-width: 125px;
                                    max-width: 125px;
                                    width: 125px;
                                    padding: 10px 5px;
                                    text-transform: uppercase;
                                }
                                .noBorder td {
                                    border: none;
                                    border-right: 2px solid #595959;
                                }
                                .noBorder td:first-child {
                                    border-right: none;
                                }
                                .noBorder td:nth-last-child(2) {
                                    border-right: none;
                                }
                                .second-col td {
                                    border: none;
                                    border-bottom: 2px solid #595959;
                                    border-top: 2px solid #595959;
                                }
                                .totaler td {
                                    border-top: 2px solid #595959;
                                    border-bottom: 2px solid #595959;
                                }
                                .grand td {
                                    background: #595959;
                                    color: #fff;
                                }
                                .first_child {
                                    background: #fff !important;
                                    width: 3px;
                                    border: none !important;
                                }
                                tr:nth-child(2) .last_child {
                                    background: #fff !important;
                                    width: 3px;
                                    border: none !important;
                                }
                                .bodered td {
                                    border: none !important;
                                    padding: 2px 0px 0px !important;
                                }
                                h1 {
                                    text-align: center;
                                }
                                h1 span {
                                    border-bottom: 2px solid #000;
                                }
                                body.o_in_iframe {
                                    margin-top: 0px !important;
                                }
                                    
                            </style>

                            <span t-esc="genrate_values()"></span>
                            
                            <div class="report-container">


                                <h1><span>Financial Report</span></h1>
                                <div class="heading">
                                    <h2><span t-esc="call_heading()"></span></h2>
                                </div>

                                <div class="report-header">
                                    
                                    <div class="dated">
                                        <p><span><b>From: </b></span> <span t-esc="form"></span></p>
                                        <p><span><b>To: </b></span> <span t-esc="to"></span></p>
                                    </div>

                                </div>

                                <table cell-spacing="3">
                                    
                                    <tr class="bodered">
                                        <td colspan="2"></td>
                                        <t t-foreach="o.division" t-as="part">
                                            <td></td>
                                        </t>

                                        <td colspan="2"></td>
                                    </tr>

                                    <tr class="child">

                                        <td class="first_child"></td>
                                        <td></td>
                                        <t t-foreach="o.division" t-as="part">
                                            <td class="space"><span t-esc="part.name"></span></td>
                                        </t>
                                        <td style="border: none !important;">TOTAL</td>
                                        <td class="last_child"></td>
                                    </tr>
                                    
                                    <tr class="bodered">
                                        <td colspan="2"></td>
                                        <t t-foreach="o.division" t-as="part">
                                            <td></td>
                                        </t>

                                        <td colspan="2"></td>
                                    </tr>

                                    <tr class="second-col">
                                        <td></td>
                                        <t t-set="partial" t-value="1" />
                                        <t t-foreach="o.division" t-as="part">
                                            <t t-set="partial" t-value="partial + 1" />
                                        </t>
                                        <td style="border-right: 2px solid #595959;"></td>

                                        <td t-att-colspan="partial">------------------------- RS ---------------------------</td>
                                        <td class="last_child"></td>
                                    </tr>

                                    <t t-foreach="iterations" t-as="data">

                                        <t t-if="data.entry_type == 'heading'">

                                            <tr class="noBorder">

                                                <td></td>
                                                <td>
                                                    <t t-if="data.level == 2">
                                                        <span style="width: 10px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level == 3">
                                                        <span style="width: 20px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level == 4">
                                                        <span style="width: 30px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level == 5">
                                                        <span style="width: 40px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level >= 6">
                                                        <span style="width: 50px; display: inline-block"></span>
                                                    </t>
                                                    <b>
                                                        <span t-esc="data.description.name"></span>
                                                    </b>
                                                </td>

                                                <t t-foreach="o.division" t-as="part">
                                                    <td></td>
                                                </t>

                                                <td></td>
                                                <td class="last_child"></td>

                                            </tr>

                                        </t>

                                        <t t-if="data.entry_type == 'account'">

                                            <tr class="noBorder">
                                                <td></td>

                                                <t t-set="col_total" t-value="0" />

                                                <td>

                                                    <t t-if="data.level == 2">
                                                        <span style="width: 10px; display: inline-block"></span>
                                                    </t>

                                                    <t t-if="data.level == 3">
                                                        <span style="width: 20px; display: inline-block"></span>
                                                    </t>

                                                    <t t-if="data.level == 4">
                                                        <span style="width: 30px; display: inline-block"></span>
                                                    </t>

                                                    <t t-if="data.level == 5">
                                                        <span style="width: 40px; display: inline-block"></span>
                                                    </t>

                                                    <t t-if="data.level >= 6">
                                                        <span style="width: 50px; display: inline-block"></span>
                                                    </t>

                                                    <span t-esc="data.description.name"></span>

                                                </td>

                                                <t t-foreach="o.division" t-as="part">
                                                    <td><span t-esc="head_total_(data.id,part.name)"></span></td>
                                                </t>

                                                <td><span t-esc="data.amount"></span></td>
                                                <td class="last_child"></td>
                                            </tr>

                                        </t>

                                        <t t-if="data.entry_type == 'total'">

                                            <tr class="noBorder totaler">
                                                <td></td>
                                                <td>

                                                    <t t-if="data.level == 2">
                                                        <span style="width: 10px; display: inline-block"></span>
                                                    </t>

                                                    <t t-if="data.level == 3">
                                                        <span style="width: 20px; display: inline-block"></span>
                                                    </t>

                                                    <t t-if="data.level == 4">
                                                        <span style="width: 30px; display: inline-block"></span>
                                                    </t>

                                                    <t t-if="data.level == 5">
                                                        <span style="width: 40px; display: inline-block"></span>
                                                    </t>

                                                    <t t-if="data.level >= 6">
                                                        <span style="width: 50px; display: inline-block"></span>
                                                    </t>

                                                    <b><span t-esc="data.description.name"></span></b>

                                                </td>

                                                <t t-foreach="o.division" t-as="part">
                                                    <td><span t-esc="head_total_(data.id,part.name)"></span></td>
                                                </t>

                                                <td><b><span t-esc="data.amount"></span></b></td>
                                                <td class="last_child"></td>
                                            </tr>

                                        </t>

                                        <t t-if="data.entry_type == 'grand_total'">

                                            <tr class="noBorder grand">
                                                <td></td>
                                                <td>
                                                    <t t-if="data.level == 2">
                                                        <span style="width: 10px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level == 3">
                                                        <span style="width: 20px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level == 4">
                                                        <span style="width: 30px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level == 5">
                                                        <span style="width: 40px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level >= 6">
                                                        <span style="width: 50px; display: inline-block"></span>
                                                    </t>
                                                    <b><span t-esc="data.description.name"></span></b>
                                                </td>

                                                <t t-foreach="o.division" t-as="part">
                                                    <td><span t-esc="head_total_(data.id,part.name)"></span></td>
                                                </t>

                                                <td><span t-esc="data.amount"></span></td>
                                                <td class="last_child"></td>
                                            </tr>

                                        </t>

                                        <t t-if="data.entry_type == 'other_report'">

                                            <tr class="noBorder grand">
                                                <td></td>
                                                <td>
                                                    <t t-if="data.level == 2">
                                                        <span style="width: 10px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level == 3">
                                                        <span style="width: 20px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level == 4">
                                                        <span style="width: 30px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level == 5">
                                                        <span style="width: 40px; display: inline-block"></span>
                                                    </t>
                                                    <t t-if="data.level >= 6">
                                                        <span style="width: 50px; display: inline-block"></span>
                                                    </t>
                                                    <b><span t-esc="data.description.name"></span></b>
                                                </td>

                                                <t t-foreach="o.division" t-as="part">
                                                    <td><span t-esc="other_report(data.id,part.name)"></span></td>
                                                </t>

                                                <td><span t-esc="data.amount"></span></td>
                                                <td class="last_child"></td>
                                            </tr>

                                        </t>

                                    </t>                                    
                
                                </table>

                            </div>

                        </div><!--end of page -->

                    </t>

                </t>
                
            </t>

        </template>

    </data>

</openerp>