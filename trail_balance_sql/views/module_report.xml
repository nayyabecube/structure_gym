<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>   

        <template id="customer_report">

            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <!-- <t t-foreach="count" t-as="o"> -->

                    <div class="page">

                        <style>

                            .report-container {
                                width: 1000px;
                                margin: 0px auto;
                                }
                            .left {
                                width: 38%;
                                display: block;
                                float: left;
                                }
                            .left img{
                                width: 360px;
                                display: block;
                                }
                            .mid {
                                width: 26%;
                                float: left;
                                }
                            .mid img{
                                width: 120px;
                                display: block;
                                margin: 0px auto;
                                }
                            .right {
                                width: 30%;
                                display: block;
                                float: left;
                                text-align: left;
                                margin-top: 100px;
                                }
                            .right .solid {
                                width: 30%;
                                float: left;
                                font-weight: bold;
                                margin-bottom: 10px;
                                font-size: 20px;
                                margin-left: 60px;
                                }
                            .right .liquid {
                                width: 50%;
                                float: left;
                                text-decoration: underline;
                                margin-bottom: 10px;
                                font-size: 20px;
                                }
                            .head {
                                width: 100%;
                                text-align: center;
                                text-decoration: underline;
                                margin-top: 30px;
                                float: left;
                                }
                            table {
                                border: 1px solid #000;
                                margin: 10px 0px 0px;
                                width: 100%;
                                float: left;
                                border-spacing: 0px;
                                }
                            table tr th,
                            table tr td {
                                border-right: 1px solid #000;
                                text-align: center;
                            }
                            table tr th {
                                border-bottom: 1px solid #000;
                                padding: 10px 0px;
                                
                            }
                            table tr td {
                                border-top: 1px solid #ddd;
                                padding: 5px 0px;
                                line-height: 1.42857143;
                                vertical-align: top;
                            }
    
                            
                            .sign {
                                width: 100%;
                                float: left;
                                }
                            .sign .solid {
                                width: 100%;
                                text-align: left;
                                float: left;
                                font-weight: bold;
                                margin-top: 70px;
                                margin-left: 70px;
                                }

                            .date {
                                width: 50%;
                                float: left;
                                margin: 0px auto;
                            }

                            .header {
                                display: none !important;
                            }

                            .footer {
                                display: none !important;
                            }

                            .image {
                                width: 20%;
                                margin: 0px auto;
                            }

                            .image img{
                                width: 100%;
                                display: block;
                            }
                                        
                        </style>

                        <div class="report-container">

                            <div class="image">
                                <img src="/trail_balance/static/src/img/company.jpeg" alt="" />
                            </div>
            
                            <div class="head">
                                <h2>TRIAL BALANCE SQL</h2>
                            </div>

                            <div style="float:left; width: 100%;">
                                <p style="width: 50%; text-align: center; padding: 0px 50px;margin: 0px auto">
                                    <b><span class="solid">DATE: </span></b>
                                    <span class="liquid" t-esc="date"></span>
                                </p>

                            </div>


                        
                            <table>

                                <tr style="backgroud:#ccc;border-top:hidden">
                                    <th style="text-align:left;padding-left:8px;border-right:hidden;border-left:hidden">Code</th>
                                    <th style="text-align:left;padding-left:8px;border-right:hidden;border-left:hidden">Account</th>
                                    <th style="text-align:left;padding-left:8px">Debit</th>
                                    <th style="border-right:hidden;border-left:hidden">Credit</th>
                                    <th style="border-right:hidden;border-left:hidden">Balance</th>
                                </tr>

                                <t t-foreach="records" t-as="o">

                                    <tr>

                                        <td style="text-align:left;padding-left:8px;border-right:hidden;border-left:hidden">
                                            <span t-esc="o.code"></span>
                                           
                                        </td>

                                        <td style="text-align:left;padding-left:8px;border-right:hidden;border-left:hidden">
                                            <span t-esc="o.name"></span>
                                        </td>

                                        <td style="text-align:left;padding-left:8px;border-right:hidden;border-left:hidden">
                                            
                                            <span t-esc="get_debit(o.id)"></span>

                                        </td>

                                        <td style="text-align:left;padding-left:8px;border-right:hidden;border-left:hidden">

                                            <span t-esc="get_credit(o.id)"></span>

                                        </td>

                                        <td style="text-align:left;padding-left:8px;border-right:hidden;border-left:hidden">


                                        </td>

                                    </tr>

                                </t>


                                <tr>
                                    
                                    <td colspan="2" style="font-weight:bold;border-right:hidden;border-left:hidden">Total</td>
                                    <td style="text-align:left;padding-left:8px;font-weight:bold;border-right:hidden;border-left:hidden">
                                       
                                    </td>
                                    <td style="text-align:left;padding-left:8px;font-weight:bold;border-right:hidden;border-left:hidden">
                                      
                                    </td>
                                    <td style="text-align:left;padding-left:8px;font-weight:bold;border-right:hidden;border-left:hidden">

                                    </td>

                                </tr>

                                
                            </table>


                        </div>

                    </div>

                    <!-- </t> -->

                </t>
            </t>

        </template>

    </data>

</openerp>